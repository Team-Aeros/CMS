<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="{{ public_url }}/node_modules/bootstrap/dist/css/bootstrap.min.css" />
    <script src="{{ public_url }}/node_modules/jquery/dist/jquery.slim.min.js"></script>
    <script src="{{ public_url }}/node_modules/popper.js/dist/umd/popper.min.js"></script>
    <script src="{{ public_url }}/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="{{ site_url }}/core/views/styles/stylesheet.php?style=styles" />
    <title>Welcome to Symfony!</title>
</head>
<body>
    <div class="container">
        <div id="login-field" class="col-md-5 col-sm-12 col-md-5 mx-auto">
            <h4>{{ translate('auth.log_in') }}</h4>
            <form method="post" action="{{ site_url }}/index.php/login">
                <div class="form-group">
                    <label for="loginEmail">{{ translate('auth.email') }}</label>
                    <input type="email" name="email" class="form-control" id="loginEmail" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="loginPassword">{{ translate('auth.password') }}</label>
                    <input type="password" name="password" class="form-control" id="loginPassword" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary col-12">{{ translate('auth.log_in') }}</button>
            </form>
        </div>
    </div>
</body>
</html>